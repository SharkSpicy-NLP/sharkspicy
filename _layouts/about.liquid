---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <article>
    {% if page.profile %}
      <div class="profile float-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
        {% if page.profile.image %}
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid z-depth-1
      rounded' %}
          {% endif %}
          {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px)
      30vw, 95vw"{% endcapture %}
          {%
            include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image
            cache_bust=true
          %}
        {% endif %}
        {% if page.profile.more_info %}
          <div class="more-info">{{ page.profile.more_info }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="clearfix">{{ content }}</div>

    <div class="home-sections">
      <!-- News -->
      {% if page.announcements and page.announcements.enabled %}
        <section class="home-section">
          <h2 class="home-section-title">
            <a href="{{ '/news/' | relative_url }}" style="color: inherit">üî• News</a>
          </h2>
          {% include news.liquid limit=true %}
        </section>
      {% endif %}

      <!-- Latest posts -->
      {% if page.latest_posts and page.latest_posts.enabled %}
        <section class="home-section">
          <h2 class="home-section-title">
            <a href="{{ '/blog/' | relative_url }}" style="color: inherit">latest posts</a>
          </h2>
          {% include latest_posts.liquid %}
        </section>
      {% endif %}

      <!-- Educations -->
      {% if page.educations %}
        <section class="home-section">
          <h2 class="home-section-title">
            üéì Educations
          </h2>
          {% if site.data.educations and site.data.educations.size > 0 %}
            <ul>
              {% for edu in site.data.educations %}
                <li>
                  {% if edu.logos and edu.logos.size > 0 %}
                    <span>
                      {% for logo in edu.logos %}
                        {% assign logo_url = logo.url %}
                        {% if logo_url contains '://' %}
                          {% assign logo_src = logo_url %}
                        {% else %}
                          {% assign logo_src = logo_url | relative_url %}
                        {% endif %}
                        <img
                          src="{{ logo_src }}"
                          alt="{{ logo.alt }}"
                          style="height: 1.2rem; width: 1.2rem; object-fit: contain; margin-right: 0.35rem; vertical-align: text-bottom;"
                        />
                      {% endfor %}
                    </span>
                  {% endif %}
                  <strong>{{ edu.degree }}</strong>, {{ edu.school }}
                  {% if edu.period %} ({{ edu.period }}){% endif %}
                  {% if edu.details %}<br />{{ edu.details }}{% endif %}
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </section>
      {% endif %}

      <!-- Publications -->
      {% if page.selected_papers %}
        <section class="home-section">
          <h2 class="home-section-title">
            <a href="{{ '/publications/' | relative_url }}" style="color: inherit">üìë Publications</a>
          </h2>
          {% include selected_papers.liquid %}
        </section>
      {% endif %}

      <!-- Collaborative Publications -->
      {% if page.collaborative_papers %}
        <section class="home-section">
          <h2 class="home-section-title">
            ü§ù Collaborative Publications
          </h2>
          {% include collaborative_papers.liquid %}
        </section>
      {% endif %}

      <!-- Internships -->
      {% if page.internships %}
        <section class="home-section">
          <h2 class="home-section-title">
            üíº Internships
          </h2>
          {% if site.data.internships and site.data.internships.size > 0 %}
            <ul>
              {% for internship in site.data.internships %}
                <li>
                  {% if internship.venue %}
                    <span class="internship-venue-badge">
                      {% if internship.paper_url %}
                        <a href="{{ internship.paper_url }}" target="_blank" rel="noopener noreferrer">{{ internship.venue }}</a>
                      {% else %}
                        {{ internship.venue }}
                      {% endif %}
                    </span>
                  {% endif %}
                  <strong>{{ internship.role }}</strong>, {{ internship.organization }}
                  {% if internship.period %} ({{ internship.period }}){% endif %}
                  {% if internship.details %}<br />{{ internship.details }}{% endif %}
                  {% if internship.paper_title and internship.paper_url %}
                    <br />
                    Paper:
                    <a href="{{ internship.paper_url }}" target="_blank" rel="noopener noreferrer">
                      {{ internship.paper_title }}
                    </a>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </section>
      {% endif %}
    </div>

    <!-- Social -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% social_links %}</div>

        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
